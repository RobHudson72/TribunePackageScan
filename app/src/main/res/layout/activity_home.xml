<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mydistrict.tribunepackagescan.HomeActivity">

    <TextView android:text="Welcome to the Tribune PackageScan utility" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Update"
        android:id="@+id/btn_getupdate"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="btn_getupdates_OnClick" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan Barcodes"
        android:id="@+id/btn_gotoscan"
        android:layout_below="@+id/btn_getupdate"
        android:layout_centerHorizontal="true"
        android:onClick="btn_gotoscan_OnClick" />
</RelativeLayout>
